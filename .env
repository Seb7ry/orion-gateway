# ===========================================
# ORION GATEWAY - Environment Variables
# ===========================================

# Gateway Configuration
SERVER_PORT=8080
GATEWAY_NAME=orion-gateway

# Microservices URLs
# Auth Service
ORION_AUTH_URL=http://localhost:8091

# User & Role Service (mismo servicio)
ORION_USER_URL=http://localhost:8092

# Program Service
ORION_PROGRAM_URL=http://localhost:8093

# Document Service
ORION_DOCUMENT_URL=http://localhost:8094

# Drive Service
ORION_DRIVE_URL=http://localhost:8095

# Future Services (preparados)
ORION_NOTIFICATION_URL=http://localhost:8096
ORION_EMAIL_URL=http://localhost:8097
ORION_REPORT_URL=http://localhost:8098
ORION_ANALYTICS_URL=http://localhost:8099

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Logging Level
LOGGING_LEVEL=INFO
GATEWAY_LOGGING_LEVEL=DEBUG