# ===========================================
# ORION GATEWAY - Docker Environment
# ===========================================

# Gateway Configuration
SERVER_PORT=8080
GATEWAY_NAME=orion-gateway

# Microservices URLs (Docker network)
# Auth Service
ORION_AUTH_URL=http://orion-auth:8091

# User & Role Service
ORION_USER_URL=http://orion-user:8092

# Program Service
ORION_PROGRAM_URL=http://orion-program:8093

# Document Service
ORION_DOCUMENT_URL=http://orion-document:8094

# Drive Service
ORION_DRIVE_URL=http://orion-drive:8095

# Future Services
ORION_NOTIFICATION_URL=http://orion-notification:8096
ORION_EMAIL_URL=http://orion-email:8097
ORION_REPORT_URL=http://orion-report:8098
ORION_ANALYTICS_URL=http://orion-analytics:8099

# CORS Configuration (production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Level
LOGGING_LEVEL=INFO
GATEWAY_LOGGING_LEVEL=INFO